<% if action_name.in? %w{edit layout annotate} %>
  <%= button_to t('content.actions.publish'), casebook_path(@casebook), method: :patch, params: {content_casebook: {public: true}}, class: 'action publish one-line' %>

  <% if action_name == 'layout' %>
    <%= button_to t('content.actions.add-section'), sections_path(@casebook), method: :post, class: 'action add-section' %>
    <%= link_to t('content.actions.add-resource'), new_section_path(@casebook), class: 'action add-resource' %>
    <% if @content.is_a? Content::Casebook %>
      <%= link_to t('content.actions.preview'), casebook_path(@casebook), class: 'action one-line preview', target: '_blank' %>
    <% elsif @content.is_a? Content::Section %>
      <%= link_to t('content.actions.preview'), section_path(@casebook, @section), class: 'action one-line preview', target: '_blank' %>
    <% end %>
  <% end %>

  <% if @content.is_a? Content::Resource %>
    <%= link_to t('content.actions.preview'), resource_path(@casebook, @resource), class: 'action one-line preview', target: '_blank' %>
  <% end %>

<% else %>
  <%= button_to t('content.actions.clone-casebook'), clone_casebook_path(@casebook), method: :post, class: 'action clone-casebook' %>
  <% if @casebook.owners.include?(current_user) %>
    <% if action_name == 'details' %>
      <%= link_to t('content.actions.edit'), casebook_details_path(@casebook), class: 'action edit one-line' %>
    <% elsif action_name == 'show' %>
      <% if @content.is_a? Content::Casebook %>
        <%= link_to t('content.actions.edit'), layout_casebook_path(@casebook), class: 'action edit one-line' %>
      <% elsif @content.is_a? Content::Section %>
        <%= link_to t('content.actions.edit'), layout_section_path(@casebook, @section), class: 'action edit one-line' %>
      <% elsif @content.is_a? Content::Resource %>
        <%= link_to t('content.actions.edit'), annotate_resource_path(@casebook, @resource), class: 'action edit one-line' %>
      <% end %>
    <% end %>
  <% end %>
  <%= link_to t('content.actions.export'), export_casebook_path(@casebook), class: 'action one-line export' %>
<% end %>


<% if false && @casebook.owners.include?(current_user) %>
  <% if @section.present? %>
    <% if !@section.public %>
      <%= button_to t('content.actions.publish'), section_path(@casebook, @section), method: :patch, params: {content_section: {public: true}}, class: 'action publish one-line' %>
      <%= link_to t('content.actions.preview'), section_path(@casebook, @section, params: {preview: true}), class: 'action add-section', target: '_blank' %>
    <% end %>
    <% if @section.is_a? Content::Section %>
      <%= button_to t('content.actions.add-section'), sections_path(@casebook, parent: @section.ordinal_string), method: :post, class: 'action add-section' %>
      <%= link_to t('content.actions.add-resource'), new_section_path(@casebook, parent: @section.ordinal_string), class: 'action add-resource' %>
    <% end %>
  <% else %>
    <% if !@casebook.public %>
      <%= button_to t('content.actions.publish'), casebook_path(@casebook), method: :patch, params: {content_casebook: {public: true}}, class: 'action publish one-line' %>
      <%= button_to t('content.actions.add-section'), sections_path(@casebook), method: :post, class: 'action add-section' %>
      <%= link_to t('content.actions.add-resource'), new_section_path(@casebook), class: 'action add-resource' %>
      <%= link_to t('content.actions.preview'), casebook_path(@casebook, params: {preview: true}), class: 'action preview one-line', target: '_blank' %>
    <% else %>
      <%= button_to t('content.actions.clone-casebook'), clone_casebook_path(@casebook), method: :post, class: 'action clone-casebook' %>
      <%= button_to t('content.actions.edit'), casebook_path(@casebook), class: 'action edit one-line' %>
    <% end %>
  <% end %>
<% elsif false && current_user.present? %>
  <%= button_to t('content.actions.clone-casebook'), clone_casebook_path(@casebook), method: :post, class: 'action clone-casebook' %>
<% end %>
<% if false && current_user.present? %>
  <% if @section.present? %>
    <% if @section.is_a? Content::Resource %>
      <%= link_to t('content.actions.export'), resource_export_path(@section.id), class: 'action one-line export' %>
    <% end %>
  <% else %>
    <%= link_to t('content.actions.export'), export_casebook_path(@casebook), class: 'action one-line export' %>
  <% end %>
<% end %>
