<%= simple_form_for section, url: section.persisted? ? section_path(@casebook, section) : sections_path(@casebook), method: section.persisted? ? :patch : :post do |f| %>
  <%= f.input :ordinals, as: :hidden %>
  <div class="listing section">
    <div class="section-number">
      <%= section.ordinal_string %>
    </div>
    <%= f.input :title, label: false %>
    <%= f.submit t 'content.edit.save-section' %>
  </div>
<% end %>
